@model SistemaInventarioCore.Models.Marca

@{
    ViewData["Title"] = "Actualizar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <div class="row mt-5">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly"></div>
            <input hidden asp-for="Id" />
            <div class="col-12 col-lg-6 offset-lg-3">
                <div class="card bg-white shadow">
                    <div class="card-header bg-primary p-5 text-center p-md-2 text-md-start">
                        <h5 class="text-white"> <i class="fa-solid fa-pen-to-square"></i> Actualizar Marca</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <label asp-for="Nombre" class="form-label text-uppercase text-muted fw-bold"></label>
                            <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre Marca" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Estado" class="form-label text-uppercase text-muted fw-bold"></label>
                            <select asp-for="Estado" class="form-select">
                                <option disabled selected>Seleccione</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-success"> <i class="fa-solid fa-pen-to-square"></i> Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-outline-secondary"> <i class="fa-solid fa-arrow-left-long"></i> Atras</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

