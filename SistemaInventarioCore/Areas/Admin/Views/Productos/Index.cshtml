@model IEnumerable<SistemaInventarioCore.Models.ViewsModels.ProductoVM>

@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center my-4 fw-bold">Lista de Producto</h1>

    <div class="d-md-flex justify-content-end mb-3">
        <a asp-action="Crear" class="btn btn-primary"> <i class="fa-regular fa-plus"></i> Nuevo Productos</a>
    </div>


    <div class="table-responsive shadow p-2 rounded bg-white">
        <table id="tblDato" class="table table-striped w-100">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(b => b.Producto.Codigo)</th>
                    <th>@Html.DisplayNameFor(b => b.Producto.Nombre)</th>
                    <th>@Html.DisplayNameFor(b => b.Producto.Categoria.Nombre)</th>
                    <th>@Html.DisplayNameFor(b => b.Producto.Marca.Nombre)</th>
                    <th>@Html.DisplayNameFor(b => b.Producto.Costo)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/producto.js"></script>
}



